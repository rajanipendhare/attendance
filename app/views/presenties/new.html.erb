<%=render 'form'%>
<div class="container">
<table class = "table">
	<thead class="thead-dark">
	<tr>
		<th>Created At</th>
		<th>Student</th>
		<th>Status</th>
		<th colspan="2"> Action </th>
	</tr>
</thead>
	<tbody>
		<% @presenties.each do |presenty|%>
			<tr>
				<td><%= presenty.created_at.strftime '%d/%b/%Y' %></td>
				<td><%= presenty.student.first_name + " " + presenty.student.last_name %></td>
				<td><%= presenty.status%></td>
				<td><%=link_to "Edit", edit_presenty_path(presenty)%></td>
				<td><%= link_to 'Delete', presenty, method: :delete, data: { confirm: 'Are you sure?' } %></td>
			</tr>
		<%end%>
	</tbody>
</table>
<div class="card text-white bg-success mb-3" style="max-width: 10rem;">
      <div class="card-body">
        <h5>Total Students</h5><%= Presenty.count%>
        <h5>Present Students</h5><%= Presenty.where(status: 'true').count%>
        <h5>Absent Students</h5><%= Presenty.where(status: 'false').count%>
      </div>
</div>
</div>
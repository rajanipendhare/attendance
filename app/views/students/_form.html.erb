<%=form_for @student do |f|%><br>
  First Name :- <%=f.text_field :first_name%><br><br>
  Last Name :- <%=f.text_field :last_name%><br><br>
  Select Gender :- <%=f.radio_button :gender, "Male", class:"form-check-input"%>
    <%=f.label :male, "Male", class: "form-check-label"%><br>
    <%=f.radio_button :gender, "Female", class:"form-check-input"%>
    <%=f.label :female, "Female", class: "form-check-label"%><br><br>
  Date of Birth :- <%=f.date_field :birth_date%><br><br>
  Contact :- <%=f.number_field :contact%><br><br>
  Address :- <%=f.text_field :address%><br><br>
  Standard :- <%=f.select :standard, [['First', 'first'], ['Second', 
    'second'],['Third', 'third'], ['Fourth', 'fourth'],
    ['Fifth','fifth']]%><br><br>
  Is Active :- <%=f.check_box :is_active %><br><br>
  <%=f.submit class: "btn btn-primary mb-2"%><br><br>
  <%=link_to "Back", students_path, class: "btn btn-primary"%>
<%end%>
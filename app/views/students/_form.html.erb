<div class="container">
  <%form_for @student do |f|%><br>
    <div class="form-group">
      First Name :- <%=f.text_field :first_name%><br>
      Last Name :- <%=f.text_field :last_name%><br>
      Select Gender :- <%=f.radio_button :gender, "Male", class:"form-check-input"%>
        <%=f.label :male, "Male", class: "form-check-label"%>
        <%=f.radio_button :gender, "Female", class:"form-check-input"%>
        <%=f.label :female, "Female", class: "form-check-label"%><br>
      Date of Birth :- <%=f.date_field :birth_date%><br>
      Contact :- <%=f.number_field :contact%><br>
      Address :- <%=f.text_field :address%><br>
      Standard :- <%=f.check_box :standard %><br>
      Is Active :- <%=f.check_box :is_active %><br>
      <%=f.submit class: "btn btn-primary"%>
      <%=link_to "Back", students_path%>
    </div>
  <%end%>
</div>